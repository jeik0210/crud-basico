<%= form_tag(@path , method: 'post') do %>
	<%= hidden_field_tag :post_id, @post.id %>
	<%= label_tag :titulo, 'titulo'%>
	<%= text_field :post, :titulo, value: @post.titulo %>
	<br>
	<%= label_tag :descripcion, 'descripcion'%>
	<%= text_field :post, :descripcion , value: @post.descripcion %>
	<br>
	<%= label_tag :fecha, 'fecha'%>
	<%= text_field :post, :fecha, value: @post.fecha %>
	<br>
	<%= submit_tag 'enviar'%>
<% end %>